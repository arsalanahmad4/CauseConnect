<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:paddingTop="12dp"
    android:paddingBottom="32dp"
    android:background="#FFC107"
    tools:context=".StartCause">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Create an Organization"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:elevation="6dp"/>
    <EditText
        android:id="@+id/name_of_org_creator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:hint="Please enter your name"
        android:textColorHint="@color/quantum_grey"
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corner"
        android:elevation="4dp"/>

    <EditText
        android:id="@+id/name_of_organization"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:hint="Please enter the name of organization"
        android:textColorHint="@color/quantum_grey"
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corner"
        android:elevation="4dp"/>

    <EditText
        android:id="@+id/services_provided"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:hint="Please write the services you work upon"
        android:textColorHint="@color/quantum_grey"
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corner"
        android:elevation="4dp"/>
    <EditText
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:hint="In which city you operate"
        android:textColorHint="@color/quantum_grey"
        android:fontFamily="casual"
        android:gravity="center"
        android:background="@drawable/rounded_corner"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>



    <Button
        android:id="@+id/create_organization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Organization"
        android:padding="4dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corner_button"
        android:elevation="24dp"/>


</LinearLayout>